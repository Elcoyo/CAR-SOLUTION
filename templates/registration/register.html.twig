{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{asset('assets/styles/register.css')}}">

    <h1>Register</h1>

{{ form_errors(registrationForm) }}

{{ form_start(registrationForm, {'attr': {'class': 'your-form-class'}}) }}
    <div class="form-group">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'your-input-class'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.firstname) }}
        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'your-input-class'}}) }}
    </div>
    <!-- Répète ce modèle pour les autres champs -->
    
    {{ form_widget(registrationForm._token) }} {# Ne pas oublier le jeton CSRF #}
    
    <button type="submit" class="btn">S'inscrire</button>
{{ form_end(registrationForm) }}

{% endblock %}
